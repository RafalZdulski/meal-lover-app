<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="585.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.zdulski.finalproject.viewcontrollers.DrawerController">
   <center>
      <VBox fx:id="sideMenu" minWidth="220.0" prefHeight="585.0" prefWidth="240.0">
         <children>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#onRandomClick" prefHeight="35.0" prefWidth="259.0" text="Random Meal">
               <font>
                  <Font size="24.0" />
               </font></Button>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#onSearchClick" prefHeight="35.0" prefWidth="298.0" text="Search Meal">
               <font>
                  <Font size="24.0" />
               </font></Button>
         </children>
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
      </VBox>
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#onExitClick" prefHeight="35.0" prefWidth="279.0" text="EXIT" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font></Button>
   </bottom>
</BorderPane>
